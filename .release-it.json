{
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  },
  "git": {
    "commitMessage": "feat: v${version}",
    "commit": true,
    "push": true
  },
  "npm": {
    "publish": true,
    "ignoreVersion": false
  },
  "hooks": {
    "after:bump": "echo 更新版本成功"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
